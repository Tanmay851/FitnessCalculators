<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.sidlin.fitnessapp.TdeeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:src="@drawable/bench_logo_no_background" />

        <TextView
            android:id="@+id/txtdashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Fitness Calculators"
            android:textColor="@color/whiteDefault"
            android:paddingLeft="20dp"
            android:textSize="24sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/weightTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Weight (lbs.)"
        android:layout_margin="20dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/heightTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Height (in.)"
        android:layout_margin="20dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/bfTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Body Fat %"
        android:layout_margin="20dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/ageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Age"
        android:layout_margin="20dp"
        android:inputType="number" />

    <Spinner
        android:id="@+id/multiplierSpinner"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:entries="@array/mult" />

    <Button
        android:id="@+id/tdeeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyButton"
        android:layout_margin="20dp"
        android:text="Calculate TDEE" />

    <TextView
        android:id="@+id/tdeeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TDEE: N/A"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:textSize="30sp" />


</LinearLayout>